---
interface Props {
    data: {
        rating?: string;
        reviewCount?: string;
        trustText?: string;
        showGoogleLogo?: boolean;
    };
}

const { data } = Astro.props;
---

<div class="flex flex-col items-center justify-center py-6">
    <div class="flex items-center gap-2 mb-2">
        <div class="flex text-yellow-400">
            {
                [...Array(5)].map(() => (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                    </svg>
                ))
            }
        </div>
        <span class="text-xl font-bold text-slate-900 dark:text-white"
            >{data.rating || "4.9"}</span
        >
    </div>
    <p class="text-slate-600 dark:text-slate-400 text-center font-medium">
        <span class="text-slate-900 dark:text-white font-bold"
            >{data.reviewCount || "120+"}</span
        >
        {data.trustText || "Pasangan di Yogyakarta telah kami layani"}
    </p>
    {
        data.showGoogleLogo && (
            <div class="mt-3 opacity-50 flex items-center gap-2 bg-slate-100 dark:bg-slate-800 px-3 py-1 rounded-full">
                <span class="text-[10px] tracking-widest font-bold uppercase text-slate-500">
                    Google Reviews
                </span>
            </div>
        )
    }
</div>
