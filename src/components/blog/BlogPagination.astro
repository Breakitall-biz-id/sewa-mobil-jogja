---
/**
 * Blog Pagination Component
 * Pagination controls with Previous, page numbers, Next
 */
interface Props {
    currentPage?: number;
    totalPages?: number;
    baseUrl?: string;
}

const { currentPage = 1, totalPages = 3, baseUrl = "/blog" } = Astro.props;

// Generate page numbers to display
const getPageNumbers = () => {
    const pages: (number | string)[] = [];

    if (totalPages <= 5) {
        for (let i = 1; i <= totalPages; i++) {
            pages.push(i);
        }
    } else {
        // Always show first page
        pages.push(1);

        if (currentPage > 3) {
            pages.push("...");
        }

        // Show pages around current
        for (
            let i = Math.max(2, currentPage - 1);
            i <= Math.min(totalPages - 1, currentPage + 1);
            i++
        ) {
            if (!pages.includes(i)) {
                pages.push(i);
            }
        }

        if (currentPage < totalPages - 2) {
            pages.push("...");
        }

        // Always show last page
        if (!pages.includes(totalPages)) {
            pages.push(totalPages);
        }
    }

    return pages;
};

const pageNumbers = getPageNumbers();
---

<nav
    class="mt-12 flex items-center justify-center gap-4"
    aria-label="Pagination"
>
    <!-- Previous Button -->
    {
        currentPage > 1 ? (
            <a
                href={`${baseUrl}?page=${currentPage - 1}`}
                class="px-5 py-2 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 hover:border-primary hover:text-primary dark:hover:text-white text-sm font-medium transition-colors"
                aria-label="Halaman Sebelumnya"
            >
                Previous
            </a>
        ) : (
            <span class="px-5 py-2 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-400 cursor-not-allowed opacity-50 text-sm font-medium">
                Previous
            </span>
        )
    }

    <!-- Page Numbers -->
    <div class="flex gap-2">
        {
            pageNumbers.map((pageNum) =>
                pageNum === "..." ? (
                    <span class="w-10 h-10 flex items-center justify-center text-slate-400">
                        ...
                    </span>
                ) : pageNum === currentPage ? (
                    <span
                        class="w-10 h-10 rounded-lg text-sm font-bold flex items-center justify-center transition-colors bg-primary text-white"
                        aria-current="page"
                    >
                        {pageNum}
                    </span>
                ) : (
                    <a
                        href={`${baseUrl}?page=${pageNum}`}
                        class="w-10 h-10 rounded-lg text-sm font-bold flex items-center justify-center transition-colors border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 hover:border-primary hover:text-primary"
                    >
                        {pageNum}
                    </a>
                ),
            )
        }
    </div>

    <!-- Next Button -->
    {
        currentPage < totalPages ? (
            <a
                href={`${baseUrl}?page=${currentPage + 1}`}
                class="px-5 py-2 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 hover:border-primary hover:text-primary dark:hover:text-white text-sm font-medium transition-colors"
                aria-label="Halaman Selanjutnya"
            >
                Next
            </a>
        ) : (
            <span class="px-5 py-2 rounded-lg border border-slate-200 dark:border-slate-700 text-slate-400 cursor-not-allowed opacity-50 text-sm font-medium">
                Next
            </span>
        )
    }
</nav>
