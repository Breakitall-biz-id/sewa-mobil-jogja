---
/**
 * Blog Featured Post Component
 * Large featured article card displayed below hero
 */
import { Image } from "astro:assets";

interface Props {
    post: {
        slug: string;
        title: string;
        excerpt: string;
        image: string;
        date: string;
        readTime?: string;
        category?: string;
    };
}

const { post } = Astro.props;
---

<div class="mb-16 -mt-20 relative z-20">
    <article
        class="group relative bg-white dark:bg-[#1f2937] rounded-2xl overflow-hidden shadow-xl border border-slate-100 dark:border-slate-700 hover:shadow-2xl transition-shadow duration-300"
    >
        <a
            href={`/blog/${post.slug}`}
            class="grid grid-cols-1 md:grid-cols-2 h-full"
        >
            <!-- Image -->
            <div class="relative h-64 md:h-auto overflow-hidden">
                {
                    post.category && (
                        <div class="absolute top-4 left-4 z-10">
                            <span class="px-3 py-1 bg-secondary text-white text-xs font-bold rounded-full shadow-sm">
                                {post.category}
                            </span>
                        </div>
                    )
                }
                <Image
                    src={post.image}
                    alt={post.title}
                    width={800}
                    height={500}
                    loading="eager"
                    fetchpriority="high"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                />
            </div>

            <!-- Content -->
            <div class="p-8 md:p-12 flex flex-col justify-center">
                <!-- Meta -->
                <div
                    class="flex items-center gap-3 text-sm text-slate-500 dark:text-slate-400 mb-4"
                >
                    <span class="flex items-center gap-1">
                        <span class="material-symbols-outlined text-[16px]"
                            >calendar_today</span
                        >
                        {post.date}
                    </span>
                    {
                        post.readTime && (
                            <span class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-[16px]">
                                    schedule
                                </span>
                                {post.readTime}
                            </span>
                        )
                    }
                </div>

                <!-- Title -->
                <h2
                    class="text-3xl font-bold text-slate-900 dark:text-white mb-4 leading-tight group-hover:text-primary transition-colors"
                >
                    {post.title}
                </h2>

                <!-- Excerpt -->
                <p
                    class="text-slate-600 dark:text-slate-300 mb-8 leading-relaxed"
                >
                    {post.excerpt}
                </p>

                <!-- CTA -->
                <span
                    class="inline-flex items-center gap-2 text-primary dark:text-white font-bold group-hover:text-secondary transition-colors group-hover:translate-x-1 duration-300"
                >
                    Baca Selengkapnya
                    <span class="material-symbols-outlined">arrow_forward</span>
                </span>
            </div>
        </a>
    </article>
</div>
