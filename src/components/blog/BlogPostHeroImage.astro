---
/**
 * Blog Post Hero Image Component
 * Full-width hero image for blog posts
 */
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
}

const { src, alt } = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
    <div
        class="relative aspect-video md:aspect-[21/9] w-full rounded-2xl overflow-hidden shadow-2xl"
    >
        <Image
            src={src}
            alt={alt}
            width={1280}
            height={720}
            class="w-full h-full object-cover"
            loading="eager"
            fetchpriority="high"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"
        >
        </div>
    </div>
</section>
