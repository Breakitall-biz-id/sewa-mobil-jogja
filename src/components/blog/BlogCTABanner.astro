---
/**
 * Blog CTA Banner Component
 * In-article call-to-action banner for bookings
 */
interface Props {
    title?: string;
    description?: string;
    buttonText?: string;
    buttonUrl?: string;
    carName?: string;
}

const {
    title = "Butuh mobil untuk trip Jogja ini?",
    description = "Jangan biarkan rencana liburan berantakan karena salah pilih transport. Pesan Toyota Avanza sekarang, jaminan unit bersih & wangi!",
    buttonText = "Cek Ketersediaan",
    buttonUrl = "/booking",
    carName,
} = Astro.props;
---

<div
    class="not-prose my-16 relative overflow-hidden rounded-3xl bg-[#0f172a] shadow-2xl border border-slate-700/50 group isolate"
>
    <!-- Background Effects -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-[#1e40af]/20 to-transparent opacity-50"
    >
    </div>
    <div
        class="absolute -top-24 -right-24 w-64 h-64 bg-secondary/20 rounded-full blur-3xl group-hover:bg-secondary/30 transition-colors duration-700"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-black/40 to-transparent"
    >
    </div>

    <!-- Content Container -->
    <div
        class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-8 p-8 md:p-10 items-center"
    >
        <!-- Text Section -->
        <div class="md:col-span-2 text-left space-y-4">
            <div
                class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-800/50 border border-slate-700 backdrop-blur-sm"
            >
                <span class="material-symbols-outlined text-secondary text-sm"
                    >local_taxi</span
                >
                <span
                    class="text-xs font-semibold text-slate-300 tracking-wide uppercase"
                    >Rental Terbaik Jogja</span
                >
            </div>

            <h3 class="text-2xl md:text-3xl font-bold text-white leading-tight">
                {title}
            </h3>

            <p
                class="text-slate-300 text-base md:text-lg leading-relaxed max-w-xl"
            >
                {description}
            </p>
        </div>

        <!-- Action Section -->
        <div class="flex flex-col items-center md:items-end justify-center">
            <a
                href={buttonUrl}
                class="group/btn relative inline-flex items-center justify-center gap-3 bg-secondary hover:bg-white text-white hover:text-secondary px-8 py-4 rounded-xl font-bold text-lg transition-all duration-300 shadow-[0_4px_20px_-5px_rgba(217,119,6,0.5)] hover:shadow-[0_8px_30px_-5px_rgba(255,255,255,0.3)] transform hover:-translate-y-1"
            >
                <span>{buttonText}</span>
                <span
                    class="material-symbols-outlined transition-transform group-hover/btn:translate-x-1"
                    >arrow_forward</span
                >
            </a>

            <div
                class="mt-4 flex items-center gap-2 text-slate-400 text-xs font-medium"
            >
                <span class="material-symbols-outlined text-green-500 text-sm"
                    >check_circle</span
                >
                <span>Unit Ready & Terawat</span>
            </div>
        </div>
    </div>
</div>
