---
/**
 * Blog Post Header Component
 * Displays post title, category, author, date, and read time
 */
import { Image } from "astro:assets";

interface Author {
    name: string;
    avatar?: string;
}

interface Props {
    title: string;
    category?: string;
    author: Author;
    date: string;
    readTime?: string;
}

const { title, category, author, date, readTime } = Astro.props;
---

<section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-10 pb-8 text-center">
    <!-- Category Badge -->
    {
        category && (
            <div class="inline-flex items-center gap-2 bg-primary/10 text-primary dark:text-blue-300 dark:bg-blue-900/30 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider mb-6">
                {category}
            </div>
        )
    }

    <!-- Title -->
    <h1
        class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-slate-900 dark:text-white leading-tight mb-6"
    >
        {title}
    </h1>

    <!-- Meta Info -->
    <div
        class="flex flex-wrap items-center justify-center gap-6 text-slate-500 dark:text-slate-400 text-sm"
    >
        <!-- Author -->
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-full bg-slate-200 overflow-hidden">
                {
                    author.avatar ? (
                        <Image
                            src={author.avatar}
                            alt={author.name}
                            width={100}
                            height={100}
                            class="w-full h-full object-cover"
                            loading="eager"
                        />
                    ) : (
                        <div class="w-full h-full flex items-center justify-center bg-primary text-white font-bold text-sm">
                            {author.name.charAt(0)}
                        </div>
                    )
                }
            </div>
            <span class="font-medium text-slate-900 dark:text-white"
                >{author.name}</span
            >
        </div>

        <!-- Date -->
        <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-lg">calendar_today</span
            >
            <span>{date}</span>
        </div>

        <!-- Read Time -->
        {
            readTime && (
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-lg">
                        schedule
                    </span>
                    <span>{readTime}</span>
                </div>
            )
        }
    </div>
</section>
