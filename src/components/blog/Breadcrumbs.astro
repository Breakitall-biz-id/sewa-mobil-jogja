---
/**
 * Breadcrumbs Component
 * Navigation breadcrumbs for blog pages
 */
interface BreadcrumbItem {
    label: string;
    href?: string;
}

interface Props {
    items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<div
    class="bg-white dark:bg-[#1f2937] border-b border-gray-100 dark:border-gray-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <nav
            aria-label="Breadcrumb"
            class="flex text-sm text-slate-500 dark:text-slate-400"
        >
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                {
                    items.map((item, index) => (
                        <li
                            class={
                                index === 0 ? "inline-flex items-center" : ""
                            }
                        >
                            {index > 0 && (
                                <div class="flex items-center">
                                    <span class="material-symbols-outlined text-lg mx-1">
                                        chevron_right
                                    </span>
                                    {item.href ? (
                                        <a
                                            href={item.href}
                                            class="hover:text-primary dark:hover:text-white"
                                        >
                                            {item.label}
                                        </a>
                                    ) : (
                                        <span class="text-slate-900 dark:text-white font-medium truncate max-w-[200px] sm:max-w-md">
                                            {item.label}
                                        </span>
                                    )}
                                </div>
                            )}
                            {index === 0 &&
                                (item.href ? (
                                    <a
                                        href={item.href}
                                        class="inline-flex items-center hover:text-primary dark:hover:text-white"
                                    >
                                        {item.label}
                                    </a>
                                ) : (
                                    <span class="text-slate-900 dark:text-white font-medium">
                                        {item.label}
                                    </span>
                                ))}
                        </li>
                    ))
                }
            </ol>
        </nav>
    </div>
</div>
