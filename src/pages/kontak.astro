---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import { Image } from "astro:assets";
import contactHeroBg from "../assets/contact-hero-bg.jpg";
import contactAboutImg from "../assets/contact-about.jpg";

const lang = "id";

const seo = {
    title: "Hubungi Kami",
    description:
        "Hubungi SMJ Trans Jogja untuk sewa mobil Yogyakarta. WhatsApp: +62 881-2725-610. Alamat: Jl. Magelang KM 5, Sleman. Respon cepat dan pelayanan 24 jam.",
};

const t = {
    heroTitle: "Hubungi Kami",
    heroSubtitle:
        "Siap melayani kebutuhan transportasi Anda di Yogyakarta dengan armada prima dan pelayanan sepenuh hati.",
    chatWhatsApp: "Chat WhatsApp",
    viewFaq: "Lihat FAQ",
    aboutLabel: "Tentang Kami",
    aboutTitle: "Mitra Perjalanan Terpercaya Sejak 2015",
    aboutP1:
        "SMJ Trans Jogja hadir untuk menjawab kebutuhan transportasi yang aman dan nyaman di Yogyakarta. Berawal dari 2 unit armada, kini kami telah melayani ribuan wisatawan domestik dan mancanegara dengan standar pelayanan profesional.",
    aboutP2:
        "Kami percaya bahwa perjalanan yang menyenangkan dimulai dari transportasi yang handal. Itulah mengapa seluruh armada kami selalu dalam kondisi prima dan dikemudikan oleh driver berpengalaman yang mengenal setiap sudut kota Jogja.",
    contactInfoTitle: "Informasi Kontak",
    contactInfoSubtitle:
        "Silakan hubungi kami melalui salah satu saluran di bawah ini.",
    paymentTitle: "Metode Pembayaran Resmi",
    paymentWarning: "* Mohon hanya melakukan transfer ke rekening di atas.",
    socialTitle: "Ikuti Perjalanan Kami",
    socialDesc:
        "Dapatkan info promo terbaru, rekomendasi wisata tersembunyi di Jogja, dan tips perjalanan seru di sosial media kami.",
    getDirections: "Petunjuk Arah",
};

const contactCards = [
    {
        icon: "chat",
        iconBg: "bg-green-500",
        title: "WhatsApp",
        subtitle: "Respon Cepat (08:00 - 21:00)",
        value: "+62 881-2725-610",
        primary: true,
    },
    {
        icon: "call",
        iconBg: "bg-[#1f3b61]/10",
        iconColor: "text-[#1f3b61]",
        title: "Telepon Kantor",
        subtitle: "Jam Kerja",
        value: "(0274) 123456",
    },
    {
        icon: "mail",
        iconBg: "bg-[#f59e0b]/10",
        iconColor: "text-[#f59e0b]",
        title: "Email",
        subtitle: "Bisnis & Kerjasama",
        value: "info@smjtransjogja.com",
    },
    {
        icon: "location_on",
        iconBg: "bg-red-50",
        iconColor: "text-red-500",
        title: "Alamat Kantor",
        subtitle: "",
        value: "Jl. Magelang KM 5, Sleman, Yogyakarta",
        isAddress: true,
    },
];

const bankAccounts = [
    {
        bank: "BCA",
        color: "bg-blue-700 text-white",
        number: "123-456-7890",
        name: "PT SMJ Trans Jogja",
    },
    {
        bank: "MANDIRI",
        color: "bg-yellow-400 text-blue-900",
        number: "098-765-4321",
        name: "PT SMJ Trans Jogja",
    },
];

const whatsappUrl =
    "https://api.whatsapp.com/send?phone=628812725610&text=Halo%20admin,%20saya%20mau%20Sewa%20Mobil";
---

<BaseLayout title={seo.title} description={seo.description} lang={lang}>
    <Header lang={lang} />

    <main class="flex-grow">
        <section class="relative py-20 md:py-28 overflow-hidden">
            <!-- Optimized Hero Background -->
            <div class="absolute inset-0 z-0">
                <Image
                    src={contactHeroBg}
                    alt="Background SMJ Trans Jogja"
                    class="w-full h-full object-cover opacity-20 dark:opacity-10"
                    loading="eager"
                    fetchpriority="high"
                    width={1920}
                    quality={60}
                />
                <div
                    class="absolute inset-0 bg-gradient-to-b from-[#1f3b61]/90 to-[#1f3b61]/95 mix-blend-multiply"
                >
                </div>
            </div>

            <div class="relative z-10 container-main text-center">
                <h1
                    class="text-4xl md:text-5xl font-black text-white mb-4 tracking-tight"
                >
                    {t.heroTitle}
                </h1>
                <p
                    class="text-gray-200 text-lg md:text-xl max-w-2xl mx-auto mb-8"
                >
                    {t.heroSubtitle}
                </p>

                <div class="flex gap-4 flex-wrap justify-center">
                    <a
                        href={whatsappUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 bg-[#f59e0b] hover:bg-yellow-400 text-[#1f3b61] px-6 py-3 rounded-lg font-bold shadow-lg transition"
                    >
                        <span class="material-symbols-outlined text-[20px]"
                            >chat</span
                        >
                        {t.chatWhatsApp}
                    </a>
                    <a
                        href="#faq"
                        class="flex items-center gap-2 bg-white/10 hover:bg-white/20 border border-white/30 text-white px-6 py-3 rounded-lg font-bold backdrop-blur-sm transition"
                    >
                        {t.viewFaq}
                    </a>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section class="py-16 md:py-20">
            <div class="container-main">
                <div class="flex flex-col md:flex-row gap-12 items-center">
                    <div class="flex-1 space-y-6">
                        <div class="flex items-center gap-2">
                            <div class="h-1 w-10 bg-[#f59e0b] rounded-full">
                            </div>
                            <span
                                class="text-[#f59e0b] font-bold uppercase tracking-wider text-xs"
                                >{t.aboutLabel}</span
                            >
                        </div>
                        <h2
                            class="text-3xl md:text-4xl font-bold text-[#1f3b61] leading-tight"
                        >
                            {t.aboutTitle}
                        </h2>
                        <p class="text-gray-600 text-lg leading-relaxed">
                            {t.aboutP1}
                        </p>
                        <p class="text-gray-600 leading-relaxed">
                            {t.aboutP2}
                        </p>
                    </div>
                    <div class="flex-1 w-full">
                        <div
                            class="w-full h-80 rounded-2xl overflow-hidden shadow-xl"
                        >
                            <Image
                                src={contactAboutImg}
                                alt="Armada SMJ Trans Jogja"
                                class="w-full h-full object-cover"
                                loading="eager"
                                width={800}
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Grid & Map -->
        <section class="py-16 bg-white border-t border-gray-100">
            <div class="container-main">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
                    <!-- Left Column: Contact Cards -->
                    <div class="lg:col-span-5 flex flex-col gap-8">
                        <div>
                            <h2 class="text-2xl font-bold text-[#1f3b61] mb-2">
                                {t.contactInfoTitle}
                            </h2>
                            <p class="text-gray-500">{t.contactInfoSubtitle}</p>
                        </div>

                        <div class="flex flex-col gap-4">
                            {
                                contactCards.map((card) => (
                                    <div
                                        class={`group p-5 rounded-xl border flex items-start gap-5 hover:shadow-md transition cursor-pointer ${
                                            card.primary
                                                ? "bg-blue-50 border-blue-100"
                                                : "bg-white border-gray-200 hover:border-[#1f3b61]/30"
                                        }`}
                                    >
                                        <div
                                            class={`size-${card.primary ? "12" : "10"} rounded-full ${card.iconBg} flex items-center justify-center shrink-0 ${
                                                card.primary
                                                    ? "text-white shadow-sm"
                                                    : card.iconColor
                                            }`}
                                        >
                                            <span class="material-symbols-outlined">
                                                {card.icon}
                                            </span>
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-[#121416] text-lg">
                                                {card.title}
                                            </h3>
                                            {card.subtitle && (
                                                <p class="text-sm text-gray-500 mb-1">
                                                    {card.subtitle}
                                                </p>
                                            )}
                                            <span
                                                class={`font-${card.primary ? "bold text-[#1f3b61] text-lg" : "medium text-[#121416]"}`}
                                            >
                                                {card.value}
                                            </span>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Right Column: Map -->
                    <div
                        class="lg:col-span-7 flex flex-col h-full min-h-[400px]"
                    >
                        <div
                            class="w-full h-full rounded-2xl overflow-hidden shadow-lg border border-gray-200 relative bg-gray-100"
                        >
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3953.0848251648!2d110.39!3d-7.77!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zN8KwNDYnMTIuMCJTIDExMMKwMjMnMjQuMCJF!5e0!3m2!1sen!2sid!4v1670000000000!5m2!1sen!2sid"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                class="absolute inset-0"
                                title="SMJ Trans Jogja Location"
                                aria-label="Google Maps SMJ Trans Jogja"
                            ></iframe>

                            <div
                                class="absolute bottom-4 left-4 right-4 flex justify-end pointer-events-none"
                            >
                                <a
                                    href="https://maps.google.com/?q=-7.77,110.39"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="pointer-events-auto bg-white text-[#1f3b61] text-sm font-bold py-2 px-4 rounded-lg shadow-lg hover:bg-gray-50 transition flex items-center gap-2"
                                >
                                    <span
                                        class="material-symbols-outlined text-[18px]"
                                        >directions</span
                                    >
                                    {t.getDirections}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Payment & Social Section -->
        <section class="py-12 bg-[#f6f7f8]">
            <div class="container-main">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
                    <!-- Payment Info -->
                    <div
                        class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm"
                    >
                        <h3
                            class="text-xl font-bold text-[#1f3b61] mb-6 flex items-center gap-2"
                        >
                            <span
                                class="material-symbols-outlined text-[#f59e0b]"
                                >payments</span
                            >
                            {t.paymentTitle}
                        </h3>

                        <div class="space-y-4">
                            {
                                bankAccounts.map((bank) => (
                                    <div class="flex items-center justify-between p-4 rounded-xl bg-gray-50 border border-gray-200">
                                        <div class="flex items-center gap-4">
                                            <div
                                                class={`h-10 w-16 ${bank.color} rounded flex items-center justify-center font-bold text-xs tracking-wider`}
                                            >
                                                {bank.bank}
                                            </div>
                                            <div>
                                                <p class="font-bold text-[#1f3b61] tracking-wide">
                                                    {bank.number}
                                                </p>
                                                <p class="text-xs text-gray-500">
                                                    a.n {bank.name}
                                                </p>
                                            </div>
                                        </div>
                                        <button
                                            class="text-gray-400 hover:text-[#1f3b61] transition copy-btn"
                                            data-number={bank.number}
                                            title="Salin nomor rekening"
                                            aria-label={`Salin nomor rekening ${bank.bank}`}
                                        >
                                            <span class="material-symbols-outlined">
                                                content_copy
                                            </span>
                                        </button>
                                    </div>
                                ))
                            }
                        </div>

                        <p class="text-xs text-red-500 mt-4 italic">
                            {t.paymentWarning}
                        </p>
                    </div>

                    <!-- Social Media -->
                    <div
                        class="bg-[#1f3b61] p-8 rounded-2xl text-white shadow-lg relative overflow-hidden"
                    >
                        <div
                            class="absolute -right-10 -top-10 w-40 h-40 bg-[#f59e0b]/20 rounded-full blur-3xl"
                        >
                        </div>

                        <h3 class="text-xl font-bold mb-4 relative z-10">
                            {t.socialTitle}
                        </h3>
                        <p
                            class="text-blue-100 mb-6 relative z-10 text-sm leading-relaxed"
                        >
                            {t.socialDesc}
                        </p>

                        <div class="flex gap-4 relative z-10">
                            <a
                                href="https://facebook.com/smjtransjogja"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="size-12 rounded-full bg-white/10 border border-white/20 flex items-center justify-center text-white hover:bg-[#f59e0b] hover:text-[#1f3b61] hover:border-[#f59e0b] transition"
                                aria-label="Facebook SMJ Trans Jogja"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                                    ></path>
                                </svg>
                            </a>
                            <a
                                href="https://instagram.com/smjtransjogja"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="size-12 rounded-full bg-white/10 border border-white/20 flex items-center justify-center text-white hover:bg-[#f59e0b] hover:text-[#1f3b61] hover:border-[#f59e0b] transition"
                                aria-label="Instagram SMJ Trans Jogja"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.468 2.37c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                                    ></path>
                                </svg>
                            </a>
                            <a
                                href="https://tiktok.com/@smjtransjogja"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="size-12 rounded-full bg-white/10 border border-white/20 flex items-center justify-center text-white hover:bg-[#f59e0b] hover:text-[#1f3b61] hover:border-[#f59e0b] transition"
                                aria-label="TikTok SMJ Trans Jogja"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer lang={lang} />
    <WhatsAppButton />
</BaseLayout>

<script>
    // Copy bank number functionality
    document.querySelectorAll(".copy-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
            const number = (btn as HTMLElement).dataset.number;
            if (number) {
                navigator.clipboard.writeText(number.replace(/-/g, ""));
                alert("Nomor rekening disalin!");
            }
        });
    });
</script>
