---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const lang = "id";

const seo = {
    title: "Privacy Policy",
    description: "Kebijakan Privasi SMJ Trans Jogja.",
};
---

<BaseLayout title={seo.title} description={seo.description} lang={lang}>
    <Header lang={lang} />
    <main class="max-w-4xl mx-auto px-4 py-12 min-h-screen">
        <h1 class="text-3xl font-bold mb-6">Privacy Policy</h1>
        <p class="prose">
            Halaman Kebijakan Privasi sedang dalam pengembangan.
        </p>
    </main>
    <Footer lang={lang} />
</BaseLayout>
